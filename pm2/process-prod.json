{
    "apps": [
        {
            "name": "WebCrawler",
            "script": "./src/bin/www",
            "watch": false,
            "instances": 1,
            "exec_mode": "fork",
            "node_args": "--harmony --expose-gc --max-old-space-size=768",
            "error_file": "./logs/err.log",
            "out_file": "./logs/out.log",
            "merge_logs": true,
            "log_date_format": "YYYY-MM-DD HH:mm:ss",
            "env": {
                "MANIFEST": "prod",
                "INSTANCE_NAME": "prod",
                "DEV_MODE": "production",
                "CHROME_DEVEL_SANDBOX": "/usr/sbin/chrome_sandbox",
                "PORT": 3200
            }
        }
    ]
}